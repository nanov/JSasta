// jastat-summary: Zero-argument function calls
// jastat: mode=run, capture=assert

import io from @io;
import t from @test;

var greet_count: i32 = 0;

function greet(): void {
    // io.println("Hello!");
    greet_count = greet_count + 1;
}

function get_magic_number(): i32 {
    return 42;
}

function calculate(): i32 {
    return get_magic_number() * 2;
}

greet();
greet();

// io.println("Magic number: {}", get_magic_number());
// io.println("Calculated: {}", calculate());

t.assert.equals(2, greet_count);
t.assert.equals(42, get_magic_number());
t.assert.equals(84, calculate());
