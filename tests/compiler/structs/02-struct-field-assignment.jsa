// jastat-summary: Struct field assignment and modification
// jastat: mode=run, capture=assert

import io from @io;
import t from @test;

struct Counter {
    value: i32;
}

var c: Counter;
c.value = 0;

// io.println("Initial: {}", c.value);
t.assert.equals(0, c.value);

c.value = 10;
// io.println("After assignment: {}", c.value);
t.assert.equals(10, c.value);

c.value = c.value + 5;
// io.println("After increment: {}", c.value);
t.assert.equals(15, c.value);
