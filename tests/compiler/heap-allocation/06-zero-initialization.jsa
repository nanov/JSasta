// jastat-summary: Verify heap-allocated arrays are zero-initialized
// jastat: mode=run, capture=assert

import io from @io;
import t from @test;

let arr = new i32[3];

// Should all be zero (calloc behavior)
// io.println("arr[0] = {}", arr[0]);
// io.println("arr[1] = {}", arr[1]);
// io.println("arr[2] = {}", arr[2]);

t.assert.equals(0, arr[0]);
t.assert.equals(0, arr[1]);
t.assert.equals(0, arr[2]);

delete arr;
