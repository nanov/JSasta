// jastat-summary: Array index assignment and modification
// jastat: mode=run, capture=assert

import io from @io;
import t from @test;

let arr: i32[3] = {0, 0, 0};

arr[0] = 100;
arr[1] = 200;
arr[2] = 300;

t.assert.equals(100, arr[0]);
t.assert.equals(200, arr[1]);
t.assert.equals(300, arr[2]);
